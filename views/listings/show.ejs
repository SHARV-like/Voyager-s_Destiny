<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row mt-3">

            <!-- card must be inside a column -->
            <div class="col-12">
                <div class="card card-body">

                    <!-- title -->
                    <div class="row">
                        <div class="col-8 offset-2 mb-3">
                            <h2>
                                <%= listing.title %> :
                            </h2>
                        </div>
                    </div>

                    <!-- image -->
                    <div class="row">
                        <div class="col-6 offset-3 mb-3">
                            <img src="<%= listing.image.url %>" class="show-img mb-2" alt="listing image">
                            <p class="card-title mb-3">
                            </p>
                        </div>
                    </div>

                    <!-- details -->
                    <div class="row">
                        <div class="col-8 offset-2">
                            <div class="card-body">
                                <p class="card-text">
                                    <%= listing.description %>
                                </p>

                                <p class="card-text">
                                    <b>Price :</b> &#8377; <%= listing.price.toLocaleString("en-IN") %>
                                </p>

                                <p class="card-text">
                                    <b>Location</b> : <%= listing.location %>
                                </p>

                                <p class="card-text">
                                    <b>Country</b> : <%= listing.country %>
                                </p>

                                <div class="show-btns">
                                    <a href="/listings/<%= listing._id %>/edit"
                                        class="btn btn-primary edit-btn mt-3 me-3">
                                        Edit
                                    </a>

                                    <!-- <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary delete-btn mt-3">
                                    Delete listing
                                </a> -->
                                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger mt-3 me-3">Delete listing</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <hr>

                <!-- Review -->
                <div class="col-8 offset-2 mb-3">
                    <h4 class="mb-3">Leave a Review : </h4>
                    <form action="/listings/<%= listing._id %>/review" method="POST" class="needs-validation"
                        novalidate>
                        <div class="row">
                            <div class="col-6 mb-3">
                                <label for="rating" class="form-label">Rating : </label>
                                <input type="range" min="1" max="5" value="3" name="review[rating]" id="rating"
                                    class="form-range">
                                <div class="stars">
                                    <span id="star"> &#127775 </span>
                                    <output for="range" id="rangeValue" aria-hidden="true"></output>
                                </div>
                            </div>

                            <div class="col-12 mb-3">
                                <label for="feedback" class="form-label">Feedback : </label>
                                <textarea name="review[comment]" id="feedback" rows="4" class="form-control"
                                    required></textarea>
                                <div class="invalid-feedback">Please provide feedback</div>
                            </div>

                            <div class="col-3">
                                <button class="btn btn-outline-secondary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
                <hr>

                <div class="col-8 offset-2 mb-3 all-reviews">
                    <h4>All Reviews : </h4>

                    <% if(!listing.reviews || listing.reviews.length===0) { %>
                        <p>No reviews yet</p>
                        <% } else { %>
                            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
                                <% for(let review of listing.reviews){ %>
                                    <div class="col">
                                        <div class="card h-100 border rounded-4 bg-info bg-opacity-10 border">
                                            <div class="card-body">
                                                <h6 class="card-title m-3">
                                                    John Doe
                                                </h6>
                                                <hr>
                                                <h6 class="card-subtitle text-body-secondary m-3">
                                                    &#127775 <%= review.rating %>
                                                </h6>
                                                <p class="card-text m-3">
                                                    <%= review.comment %>
                                                </p>
                                            </div>
                                            <form
                                                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                method="POST">
                                                <button type="submit"
                                                    class="btn border rounded-4 btn-dark col-5 m-2">delete</button>
                                            </form>
                                        </div>
                                    </div>
                                <% } }%>
                            </div>
                </div>
            </div>
        </div>
    </div>