<% layout('layouts/boilerplate') %>

    <div class="container">
        <div class="row mt-3">

            <!-- card must be inside a column -->
            <div class="col-12">
                <div class="card">

                    <!-- title -->
                    <div class="row">
                        <div class="col-8 offset-2 mb-3">
                            <h2>Listing Details :</h2>
                        </div>
                    </div>

                    <!-- image -->
                    <div class="row">
                        <div class="col-6 offset-3 mb-3">
                            <img src="<%= listing.image.url %>" class="show-img mb-2" alt="listing image">
                            <p class="card-title mb-3">
                                <b>
                                    <%= listing.title %>
                                </b>
                            </p>
                        </div>
                    </div>

                    <!-- details -->
                    <div class="row">
                        <div class="col-8 offset-2">
                            <div class="card-body">
                                <p class="card-text">
                                    <%= listing.description %>
                                </p>

                                <p class="card-text">
                                    Price : &#8377; <%= listing.price.toLocaleString("en-IN") %>
                                </p>

                                <p class="card-text">
                                    Location : <%= listing.location %>
                                </p>

                                <p class="card-text">
                                    Country : <%= listing.country %>
                                </p>

                                <div class="show-btns">
                                    <a href="/listings/<%= listing._id %>/edit"
                                        class="btn btn-primary edit-btn mt-3 me-3">
                                        Edit
                                    </a>

                                    <!-- <a href="/listings/<%= listing._id %>/edit" class="btn btn-primary delete-btn mt-3">
                                    Delete listing
                                </a> -->
                                    <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                                        <button type="submit" class="btn btn-danger mt-3 me-3">Delete listing</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>